<UserControl x:Class="Challenge_TrabalhoFuturo.TelaAvaliacao"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">
        <Label Content="⚙️ Avaliação de Posto de Trabalho" FontSize="18" FontWeight="Bold"/>
        <TextBlock Text="Selecione as características do posto para avaliar sua acessibilidade em relação ao colaborador cadastrado." Margin="0,5,0,15"/>

        <Grid HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <CheckBox x:Name="chkRampa" Grid.Row="0" Grid.Column="0" Content="Possui Acesso com Rampa?" Margin="5"/>
            <CheckBox x:Name="chkLeitor" Grid.Row="1" Grid.Column="0" Content="Possui Software Leitor de Tela?" Margin="5"/>
            <CheckBox x:Name="chkMesa" Grid.Row="2" Grid.Column="0" Content="Possui Mesa Ergonômica Ajustável?" Margin="5"/>
        </Grid>

        <Button Content="🔍 Iniciar Análise do Posto" Click="AnalisarPosto_Click" Margin="0,20,0,0" Padding="10" Width="250" HorizontalAlignment="Left"/>

        <ScrollViewer Height="200" Margin="0,20,0,0" BorderBrush="LightGray" BorderThickness="1" Padding="10">
            <TextBlock x:Name="txtResultado" TextWrapping="Wrap" FontFamily="Consolas" Text="Aguardando cadastro e análise..."/>
        </ScrollViewer>
    </StackPanel>
</UserControl>